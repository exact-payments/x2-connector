{
  "name": "@fintechdev/http-client",
  "version": "0.2.0",
  "description": "http connector to communicate with x2 gateway",
  "main": "src/index.js",
  "author": "Nicolas Del Valle <nicolas@fintechdev.net>",
  "contributors": [
    "Ignacio Anaya <ignacio@fintechdev.net>",
    "Robert Hurst <robert@fintechdev.net>"
  ],
  "scripts": {
    "main": "src/index.js",
    "test": "jest --coverage",
    "check-cover": "open coverage/lcov-report/index.html",
    "eslint": "eslint . --ext .js"
  },
  "dependencies": {
    "relign": "^0.5.0",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "@fintechdev/x2-service-storage": "0.0.2",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "fetch-mock": "^5.5.0",
    "jest": "^16.0.2",
    "node-localstorage": "^1.3.0",
    "pre-commit": "^1.1.3",
    "relign": "^0.5.0",
    "sinon": "^1.17.6"
  },
  "pre-commit": [
    "eslint"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "!**/node_modules/**",
      "src/**"
    ],
    "testPathDirs": [
      "test/"
    ],
    "setupTestFrameworkScriptFile": "test/setup.js"
  }
}
